@model Agenda.Models.Tarefa

@{
    ViewData["Title"] = "Deletar";
}

<h2>Deletar Tarefa</h2>

<h3>Tem certeza de que deseja excluir está tarefa?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HorarioInicio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HorarioInicio)
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HorarioFim)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HorarioFim)
            <hr />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </form>
</div>
